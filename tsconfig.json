{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "incremental": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [],
  "references": [
    { "path": "./apps/api" },
    { "path": "./apps/storefront" },
    { "path": "./apps/dashboard" },
    { "path": "./apps/widget" },
    { "path": "./packages/shared-types" },
    { "path": "./packages/ui" },
    { "path": "./packages/pos-adapters" },
    { "path": "./packages/payment-adapters" }
  ],
  "exclude": ["node_modules", "dist", "build", ".next", "**/*.spec.ts", "**/*.test.ts"]
}
