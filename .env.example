# OpenOrder Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://openorder:password@localhost:5432/openorder

# Redis
REDIS_URL=redis://localhost:6379

# Application
NODE_ENV=development
APP_SECRET=generate_with_openssl_rand_base64_32
PUBLIC_URL=http://localhost

# Stripe (optional - can configure in dashboard)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
